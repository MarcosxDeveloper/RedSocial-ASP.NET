@{
    ViewData["Title"] = "Perfil";
}

<style>	
#show-dialog {
  position: fixed;
  display: block;
  right: 0;
  bottom: 0;
  margin-right: 40px;
  margin-bottom: 40px;
  z-index: 900;
}
.mdl-dialog {
  width: 400px;
}
.mdl-grid {
  display: flex;
  justify-content: center;
}
.mdl-card {
  flex: 1 1 100%;
  max-width: 500px;
}
.mdl-card__title{
  justify-content: center;
}
.mdl-card__supporting-text{
  padding: 0px;
  width: 80%;
}
</style>

<div class="text-center">
    <h2> Perfil </h2>
</div>

<div class="mdl-grid">
  <div class="mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title">
        <img class="img-circle" src="@Model.foto" width="200" height="200"/>
    </div>
    <center>
      <div class="mdl-card__supporting-text">
        <ul class="mdl-list">
          <li class="mdl-list__item mdl-list__item">
            <span id="nombre" class="mdl-list__item-primary-content">
              <i class="material-icons mdl-list__item-icon">person</i>
              @Model.nombre
            </span>
          </li>
          <li class="mdl-list__item mdl-list__item">
            <span id="sexo" class="mdl-list__item-primary-content">
              <i class="material-icons mdl-list__item-icon">face</i>
              @Model.sexo
            </span>
          </li>
          <li class="mdl-list__item mdl-list__item">
            <span id="fecha_nacimiento" class="mdl-list__item-primary-content">
              <i class="material-icons mdl-list__item-icon">info</i>
              @Model.fecha_nacimiento
            </span>
          </li>
          <li class="mdl-list__item mdl-list__item">
            <span id="telefono" class="mdl-list__item-primary-content">
              <i class="material-icons mdl-list__item-icon">phone</i>
              @Model.telefono
            </span>
          </li>
          <div class="mdl-menu__item--full-bleed-divider"></div>
          <li class="mdl-list__item mdl-list__item">
            <span id="universidad" class="mdl-list__item-primary-content">
              <i class="material-icons mdl-list__item-icon">school</i>
              @Model.universidad
            </span>
          </li>
          <li class="mdl-list__item mdl-list__item">
            <span id="trabajo" class="mdl-list__item-primary-content">
              <i class="material-icons mdl-list__item-icon">work</i>
              @Model.trabajo
            </span>
          </li>
          <div class="mdl-menu__item--full-bleed-divider"></div>
          <li class="mdl-list__item mdl-list__item">
            <span id="correo" class="mdl-list__item-primary-content">
              <i class="material-icons mdl-list__item-icon">email</i>
              @Model.correo
              </span>
          </li>
          <li class="mdl-list__item mdl-list__item">
            <span class="mdl-list__item-primary-content">
              <i class="material-icons mdl-list__item-icon">place</i>
              @Model.direccion
            </span>
          </li>  
        </ul>
      </div>
    </center>
  </div>
</div>

<dialog class="mdl-dialog">
    <h4 id="dialog_titulo" class="mdl-dialog__title">Titulo</h4>
    <div id="dialog_contenido" class="mdl-dialog__content">
    <!-- Aqui veras la informacion de la DB -->
    </div>
    <div class="mdl-dialog__actions">
        <button id="btn_close" type="button" class="mdl-button close">Cerrar</button>
    </div>
</dialog>

<button id="show-dialog" type="button" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
  <i class="material-icons">edit</i>
</button>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<script>
user = sessionStorage.getItem('My_User');
if (user == null){
	window.location = '@Url.Action("Entrar", "Login")'
}
</script>