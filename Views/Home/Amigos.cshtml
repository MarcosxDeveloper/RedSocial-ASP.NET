@{
    ViewData["Title"] = "Amigos";
}

<style>	
#show-dialog {
    position: fixed;
    display: block;
    right: 0;
    bottom: 0;
    margin-right: 40px;
    margin-bottom: 40px;
    z-index: 900;
}
.mdl-dialog {
    width: 400px;
}
.mdl-card__media > img {
    max-width: 100%;
}
.mdl-card__subtitle-text{
    padding-left: 20px;
}
</style>

<div class="text-center">
    <h2> Amigos </h2>
</div>

<div class="mdl-grid">
    @foreach (var item in Models) {
        <div class="mdl-card mdl-cell mdl-cell--3-col mdl-shadow--2dp">
        <figure class="mdl-card__media">
            <img src="@item.Image" />
        </figure>
        <div class="mdl-card__title">
            <h1 class="mdl-card__title-text">@item.nombre</h1>
        </div> 
        <div class="mdl-card__subtitle-text">
            <a href="#"><i class="material-icons">people</i>@item.amigos</a>
        </div>
        <div class="mdl-card__actions mdl-card--border">
            <a href="#" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">@item.id</a>
        </div>
        </div>
    }
</div>
<dialog class="mdl-dialog">
    <h4 id="dialog_titulo" class="mdl-dialog__title">Titulo</h4>
    <div id="dialog_contenido" class="mdl-dialog__content">
    <!-- Aqui veras la informacion de la DB -->
    </div>
    <div class="mdl-dialog__actions">
        <button id="btn_close" type="button" class="mdl-button close">Cerrar</button>
    </div>
</dialog>

<button id="show-dialog" type="button" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
  <i class="material-icons">person_add</i>
</button>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<script>
user = sessionStorage.getItem('My_User');
if (user == null){
	window.location = '@Url.Action("Entrar", "Login")'
}
</script>